<!DOCTYPE html>
<html>
    <head>
        <title>Edit An Article</title>
    </head>
    <body>
        <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
            <label>Title:</label>
            <input type="text" name="article[title]" value="<%= article.title %>">
            <br><br>
            <label>Image URL</label>
            <input type="text" name="article[image]" value="<%= article.image %>">
            <br><br>
            <label>Author(s):</label>
            <input type="text" name="article[author]" value="<%= article.author %>">
            <br><br>
            <!-- <input type="text" name="article[content]" value="<%= article.content %>"> -->
            <label>Article Content:</label>
            <textarea name="article[content]" cols="200" rows="100"><%= article.content %></textarea>
            <br><br>
            <button>Submit changes</button>
        </form>
        <br>
        <a href="/articles">Go to articles page</a>
    </body>
</html>